{
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "master",
    "1.x"
  ],
  "separateMinorPatch": true,
  "packageRules": [
    {
      "matchPackageNames": [
        "org.springframework.boot:spring-boot-starter-parent"
      ],
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]
}
